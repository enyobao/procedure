/* pages/user/user.wxss */
.userinfo {
  display: flex;
  /*flex-direction: column;*/
  align-items: center;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #999;
  font-size: 40rpx;
}

.usermotto {
  margin-top: 200px;
}
.white-bac{
  background: #fff;
  padding: 20rpx;
  margin-bottom: 20rpx;
  width: 710rpx;
  color: #333;
}
.details{
  /*width:750rpx;*/
  color: #666;
}
.details-list{
  width:710rpx;
  padding: 20rpx 20rpx;
  margin-bottom:10rpx;
  position: relative;
  background: #fff;
}
.details-list .image{
  width:300rpx;
  height: 200rpx;
  position: relative;
}
.details-list .title{
  position: absolute;
  left:340rpx;
  top:10rpx;
  width:300rpx;
  font-weight: bold;
}
.details-list .price{
  position: absolute;
  left: 340rpx;
  top: 170rpx;
  color: #f00;
}
.details-list .date-departure{
  position: absolute;
  left:340rpx;
  top:110rpx;
}
.details-list .status{
  position: absolute;
  right: -20rpx;
  top: -20rpx;
  background: #ccc; 
}
.details-list .more{
  width: 710rpx;
  height: 60rpx;
  position: absolute;
  left: 0;
  top: 220rpx;
  border-top: 2rpx solid #eee;
  border-bottom: 2rpx solid #eee;
  z-index: 3;
}
.details-top{
  position: relative;
  padding-bottom: 50rpx;
}
.up-down{
  width: 60rpx;
  height: 50rpx;
  display: none;
}
.more .on{
  position: absolute;
  left: 50%;
  top: 0;
  margin-left: -30rpx;
  display: block;
}
.details-bottom{
  display: none;
}
.details-bottom.on{
  display: block;
}
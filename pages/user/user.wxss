/* pages/user/user.wxss */
.userinfo {
  display: flex;
  /*flex-direction: column;*/
  align-items: center;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #999;
  font-size: 40rpx;
}

.usermotto {
  margin-top: 200px;
}
.white-bac{
  background: #fff;
  padding: 20rpx;
  margin-bottom: 20rpx;
  width: 710rpx;
  color: #333;
}
.details{
  width:710rpx;
  color: #666;
}
.details-list{
  width:670rpx;
  padding: 30rpx 20rpx;
  position: relative;
  border-bottom: 2rpx solid #eee;
}
.details-list .image{
  width:300rpx;
  height: 200rpx;
  position: relative;
}
.details-list .title{
  position: absolute;
  left:380rpx;
  top:30rpx;
  width:300rpx;
  font-weight: bold;
}
.details-list .date-departure{
  position: absolute;
  left:380rpx;
  top:150rpx;
}
.details-list .price{
  position: absolute;
  left: 380rpx;
  top: 200rpx;
  color: #f00;
}
.details-list .status{
  position: absolute;
  right: 0;
  top: 20rpx;
  background: #ccc; 
}
.details-list .more{
  position: absolute;
  right: 20rpx;
  top: 200rpx;
  color: #00bfff;
}
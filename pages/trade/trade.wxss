/* pages/trade/trade.wxss */
.container{
    position: relative;
    width: 750rpx;
    color: #333;
    line-height: 40rpx;
}
.header{
    line-height: 50rpx;
    padding: 20rpx 25rpx;
    width: 700rpx;
    /*height: 150rpx;*/
    background: #fff;
    margin-bottom: 20rpx;
}
.title{
    font-size: 40rpx;
    color: #00bfff;
}
.price{
    color: #f00;
    font-size: 40rpx;
}
.nav-list{
    margin-top: 20rpx;
    background: #fff;
    padding: 0 25rpx;
}
.nav-title{
    padding: 20rpx 0;
    border-bottom: 2rpx solid #eee;
}
.trade-details,.tourist-details,.touristNum{
    padding: 20rpx 0;
}
.touristNum{
    font-weight: bold;
}
.fl{
    float: left;
    width: 250rpx;
}
.fr{
    float: right;
    width: 450rpx;
}
.text-right{
    text-align: right;
}
.textarea{
    width: 660rpx;
    padding:20rpx;
    background: #f8f8f8;
}
.addUser{
    display: inline-block;
    width: 80rpx;
    height: 40rpx;
    line-height: 40rpx;
    text-align: center;
}
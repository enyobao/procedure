/**index.wxss**/
@import "style.wxss";

[class^="icon-"], [class*=" icon-"] {
  /* use !important to prevent issues with browser extensions that change fonts */
  font-family: 'icomoon' !important;
  speak: none;
  font-style: normal;
  font-weight: normal;
  font-variant: normal;
  text-transform: none;
  line-height: 1;

  /* Better Font Rendering =========== */
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}
.container{
  position: relative;
  width:750rpx;
  height: 100%;
  background: #fff;
}
.header{
  position: absolute;
  left: 0;
  top: 0;
  width:750rpx;
  height: 70rpx;
  z-index: 5;
}
.logo{
  width:250rpx;
  padding-left:20rpx;
  height: 80rpx;
  line-height: 80rpx;
  float: left;
  color:#f00;
  font-weight: bold;
}
.search-con{
  position: relative;
  margin-top: 10rpx;
  width:460rpx;
  height: 60rpx;
  line-height: 60rpx;
  background: rgba(255,255,255,0.6);
  float: left;
}
.search-con .icon-search{
  position: absolute;
  right:0;
  top: 0;
  height: 60rpx;
  width: 60rpx;
  line-height: 60rpx;
  text-align: center;
  /*border: 2rpx solid #000;*/
}
.search-con .input{
  padding: 0 10rpx;
  width:380rpx;
  height: 60rpx;
}

.slide-image{
  width:750rpx;
}
.details{
  width:750rpx;
  color: #666;
}
.details-list{
  width:670rpx;
  padding: 30rpx 40rpx;
  position: relative;
  border-bottom: 2rpx solid #eee;
}
.details-list .image{
  width:300rpx;
  height: 200rpx;
  position: relative;
}
.details-list .title{
  position: absolute;
  left:380rpx;
  top:30rpx;
  width:300rpx;
  font-weight: bold;
}
.details-list .date-departure{
  position: absolute;
  left:380rpx;
  top:150rpx;
}
.details-list .price{
  position: absolute;
  left: 380rpx;
  top: 200rpx;
  color: #f00;
}


.position,.screen{
  width: 50%;
  height: 50rpx;
  line-height: 50rpx;
  float: left;
  color: #666;
  text-align: center;
  border-bottom: 2rpx solid #eee;
}
.nav-container{
  position: relative;
  color: #666;
  height: 50rpx;
}
.navlist{
  position: relative;
  float: left;
  width:375rpx;
  height: 50rpx;
  line-height: 50rpx;
  box-sizing: border-box;
  text-align:center;
  border-bottom: 2rpx solid #eee;
  border-top: 2rpx solid #eee;
}
.border-right{
  border-right: 2rpx solid #eee;
}
.nav-list-box{
  width:750rpx;
  height:400rpx;
  overflow: hidden;
}
.nav-city-con , .nav-theme-con{
  display: none;
}
.nav .on{
  background:#ccc;
}
.nav-list-box .on{
  width: 100%;
  display: block;
  background: #fff;
  border-bottom: 2rpx solid #eee;
  position: absolute;
  left: 0;
  top: 50rpx;
  z-index: 2;
  padding-bottom: 93rpx;
}
.menu{
  width:700rpx;
  padding: 25rpx;
}
.option-menu{
  width:120rpx;
  height:50rpx;
  border: 2rpx solid #eee;
  line-height: 50rpx;
  text-align: center;
  margin: 9rpx;
  float: left;
}
.choose-button{
  position: absolute;
  right: 34rpx;
  bottom: 25rpx;
}
.reset{
  margin-right: 25rpx;
}
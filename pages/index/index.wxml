<!--index.wxml-->
<view class="container">
  <view class="logo">This Is Logo</view>
  <view class="header">
    <view class="position">城市</view>
    <view class="screen">筛选</view>
    <view class="nav-container">
      <view class="nav">
        <view class="navlist border-right {{currentTab == 0 ? 'on' : ''}}" data-current='0' bindtap="switchNav">城市</view>
        <view class="navlist {{currentTab == 1 ? 'on' : ''}}" data-current="1" bindtap="switchNav">主题</view>
      </view>
      <view class="nav-list-box" current="{{currentTab}}" bindchange="bindChange">
        <view class="nav-city-con {{currentTab == 0 ? 'on' : ''}}">我是城市</view>
        <view class="nav-theme-con {{currentTab == 1 ? 'on' : ''}}">我是主题</view>
      </view>
    </view>
  </view>
  <view  bindtap="bindViewTap" class="userinfo">
    <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
    <text class="userinfo-nickname">{{userInfo.nickName}}</text>
  </view>
  <view class="usermotto">
    <text class="user-motto">{{motto}}</text>
  </view>
</view>
<template name="tabTmpl">
  <view class="tab-city">{{city}}</view>
</template>

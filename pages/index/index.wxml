<!--index.wxml-->
<import src="../template/template.wxml"/>
<view class="container">
  <view class="header clearfix">
    <view class="logo">Logo</view>
    <view class='search-con'>
        <input class="input" type="text" placeholder="北京"/>
        <view class="icon-search"></view>     
    </view>  
  </view>
  <view class="slide-con">
    <swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="duration">
      <block wx:for="{{imgUrls}}">
          <swiper-item>
              <navigator url="{{item.link}}" hover-class="navigator-hover"></navigator>
              <image src="{{item.url}}" class="slide-image"></image>
          </swiper-item>
      </block>
    </swiper>
  </view>
  <view class=" clearfix">
    <view class="position">热门城市</view>
    <view class="screen">种类</view> 
  </view>
